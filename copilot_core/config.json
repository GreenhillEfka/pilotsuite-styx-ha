{
  "name": "PilotSuite Core",
  "slug": "copilot_core",
  "description": "MVP Core Service for PilotSuite with Multi-User Preference Learning, Knowledge Graph, Brain Graph visualization, Cross-Home Sync, and Collective Intelligence.",
  "version": "5.11.0",
  "url": "https://github.com/GreenhillEfka/pilotsuite-styx-core",
  "arch": [
    "amd64",
    "aarch64"
  ],
  "startup": "services",
  "boot": "auto",
  "init": false,
  "ingress": true,
  "ingress_port": 8909,
  "map": ["share:rw"],
  "panel_icon": "mdi:brain",
  "panel_title": "Styx",
  "ports": {
    "8909/tcp": 8909
  },
  "ports_description": {
    "8909/tcp": "PilotSuite Core HTTP API (mood, brain_graph, habitus, LLM)"
  },
  "webui": "http://[HOST]:[PORT:8909]/",
  "options": {
    "log_level": "info",
    "auth_token": "",
    "brain_graph": {
      "max_nodes": 500,
      "max_edges": 1500,
      "node_half_life_hours": 24.0,
      "edge_half_life_hours": 12.0,
      "node_min_score": 0.1,
      "edge_min_weight": 0.1
    },
    "visualization": {
      "enabled": true,
      "frontend_url": "http://[HOST]:8909/visualizations",
      "brain_graph": {
        "width": 800,
        "height": 600,
        "show_legend": true,
        "show_zoom": true
      },
      "lovelace_cards": {
        "enabled": true,
        "auto_import": true,
        "cards": [
          "mood",
          "neurons",
          "habitus"
        ]
      }
    },
    "knowledge_graph": {
      "enabled": true,
      "backend": "sqlite",
      "neo4j_uri": "",
      "neo4j_user": "neo4j",
      "neo4j_password": "",
      "sqlite_path": "/data/knowledge_graph.db"
    },
    "user_preferences": {
      "enabled": true,
      "persist": true,
      "smoothing_alpha": 0.1
    },
    "cross_home_sharing": {
      "enabled": true,
      "discovery_port": 5353,
      "sync_port": 8765,
      "encryption_enabled": true
    },
    "collective_intelligence": {
      "enabled": true,
      "federated_learning": true,
      "differential_privacy_epsilon": 0.1
    },
    "webhook_url": "",
    "webhook_token": "",
    "household": {
      "members": []
    },
    "conversation": {
      "ollama_url": "http://localhost:11434",
      "ollama_model": "qwen3:4b",
      "assistant_name": "Styx",
      "character": "copilot",
      "enabled": true,
      "prefer_local": true,
      "cloud_api_url": "",
      "cloud_api_key": "",
      "cloud_model": ""
    },
    "telegram": {
      "enabled": false,
      "token": "",
      "allowed_chat_ids": []
    },
    "openai_api": {
      "enabled": true,
      "endpoint_type": "chat_completions",
      "model": "qwen3:4b"
    },
    "web_search": {
      "ags_code": "",
      "news_sources": ["tagesschau", "spiegel"]
    }
  },
  "schema": {
    "log_level": "list(trace|debug|info|warning|error)",
    "auth_token": "password?",
    "brain_graph": {
      "max_nodes": "int(100..5000)",
      "max_edges": "int(300..15000)",
      "node_half_life_hours": "float(1.0..168.0)",
      "edge_half_life_hours": "float(1.0..168.0)",
      "node_min_score": "float(0.01..1.0)",
      "edge_min_weight": "float(0.01..1.0)"
    },
    "visualization": {
      "enabled": "bool",
      "frontend_url": "str",
      "brain_graph": {
        "width": "int(400..2000)",
        "height": "int(400..1500)",
        "show_legend": "bool",
        "show_zoom": "bool"
      },
      "lovelace_cards": {
        "enabled": "bool",
        "auto_import": "bool",
        "cards": "list(mood|neurons|habitus)"
      }
    },
    "knowledge_graph": {
      "enabled": "bool",
      "backend": "list(sqlite|neo4j)",
      "neo4j_uri": "str?",
      "neo4j_user": "str?",
      "neo4j_password": "password?",
      "sqlite_path": "str?"
    },
    "user_preferences": {
      "enabled": "bool",
      "persist": "bool",
      "smoothing_alpha": "float(0.01..0.5)"
    },
    "cross_home_sharing": {
      "enabled": "bool",
      "discovery_port": "int(1024..65535)",
      "sync_port": "int(1024..65535)",
      "encryption_enabled": "bool"
    },
    "collective_intelligence": {
      "enabled": "bool",
      "federated_learning": "bool",
      "differential_privacy_epsilon": "float(0.01..1.0)"
    },
    "webhook_url": "str?",
    "webhook_token": "password?",
    "household": {
      "members": "list?"
    },
    "openai_api": {
      "enabled": "bool",
      "endpoint_type": "list(chat_completions|completions)",
      "model": "str"
    },
    "conversation": {
      "ollama_url": "str?",
      "ollama_model": "str?",
      "assistant_name": "str?",
      "character": "list(copilot|butler|energy_manager|security_guard|friendly|minimal)?",
      "enabled": "bool?",
      "prefer_local": "bool?",
      "cloud_api_url": "str?",
      "cloud_api_key": "password?",
      "cloud_model": "str?"
    },
    "telegram": {
      "enabled": "bool?",
      "token": "password?",
      "allowed_chat_ids": "list?"
    },
    "web_search": {
      "ags_code": "str?",
      "news_sources": "list?"
    }
  }
}